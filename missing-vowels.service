[Unit]
Description=Missing Vowels Game
After=network.target

[Service]
Type=simple
User=exedev
WorkingDirectory=/home/exedev/missing-vowels/backend
Environment=PATH=/home/exedev/missing-vowels/backend/venv/bin:/usr/bin:/bin
ExecStart=/home/exedev/missing-vowels/backend/venv/bin/python app.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
